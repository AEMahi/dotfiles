[alias]
    lg = "log --graph --date=format:'%b-%d-%Y' \
    --pretty='%C(magenta)%h %C(blue)%an %C(yellow)%ad%C(auto)%d %C(white)%s %Creset'"
    ss = "status --short"
    rs = "restore"
    rst = "restore --staged"
    cmsg = "commit --message"
    cam = "commit --all --message"
    cl = "clone --recurse-submodules"
    d = "diff"
    ds = "diff --staged"
    p = "push"
    l = "pull"
    f = "fetch"
    a = "add"
    aa = "add --all"
    rv = "remote --verbose"
